<h3>Opportunities</h3><br>

<%= form_tag opportunities_path, method: :get do %>
	<p>
		<%= text_field_tag :query, params[:query] %>
		<%= submit_tag "Search", name:nil %>
	</p>
<% end %>


<div>
	<table class="table table-striped">
		<tr>
			<th>Title</th>
			<th>Company</th>
			<th>Type</th>
			<th>Location</th>
			<th></th>
		</tr>

		<% @opportunities.each do |f| %>
			<tr>
				<td><%= f.title %></td>
				<td><%= f.company %></td>
				<td><%= f.job_type %></td>
				<td><%= f.location %></td>
				<td><%= link_to "View", opportunity_path(f), :class => "btn btn-info" %></td>
			</tr>
		<% end %>	
	</table>
</div>
<br>
<div class="pull-right">
	<%= link_to "Create Opportunities", new_opportunity_path, :class => "btn btn-primary" %>
</div>



<div class="container box_shadow box_padding">
	<div class="header">
				<h3 class="navyfont">&nbsp;Announcement</h3>
			</div>

		<div>
			<h4><span class="indent"/><%= @post.title %></h4>
			<span class="indent italics">by <%= @post.admin.full_name %></span> at <%= @post.created_at.strftime('%b. %e, %Y') %>

		</div>
		<br>
		<div class="well">
			<span class="indent" /><%= @post.content.html_safe %>
		</div>
		<div class="align-right">
			<%= link_to "View posts", admins_posts_path, :class => "btn btn-primary" %>
		</div>
		<div class="clear"></div>
</div>


		<br>

<div class="opportunities_index_left_container box_shadow box_padding align-left">
	<h3 class="navyfont">&nbsp;Opportunities</h3>


	<%= form_tag opportunities_path, method: :get, :class => "form-inline" do %>
		<p>
			<%= select_tag "job_type", options_from_collection_for_select(Jobtype.all, :id, :name), :class=>"select_box",:prompt => "Type" %>
			<span class="section-header">

					<%= text_field_tag :query, params[:query], :placeholder => "Enter keyword, company, or opportunity provider", :class => "span4 form-control" %>
				
				<!-- TODO: Edit block -->
				<% if false %>
					<i class="fa fa-user"></i>&nbsp;<%= text_field_tag :provider, params[:provider], :placeholder => "Enter Provider" %> 
				<% end %>

			</span>

			<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
				<i class="fa fa-search">&nbsp;Search</i>
			<% end %>

			<% if false %>
			<span class="pull-right">
				<%= link_to new_opportunity_path, :class => "btn btn-success" do %>
					<i class="fa fa-pencil"></i>&nbsp;Create
				<% end %>
			</span>
			<% end %>

		</p>

	<% end %>

	<% @opportunities.each do |f| %>
		<div class="well box_radius">
			<div class="align-left">
				<%= image_tag f.upload.url(:thumb), :class =>"box_radius" %>
			</div>
			<div class="align-left indent">
				<h4>
					<%= f.title %>&nbsp;<small><%= f.company %></small><br>
					<small class="italics"><%= f.job_type %></small>		
				</h4>
				
				<i class="fa fa-map-marker"></i>&nbsp;<%= short_location(f.location) %><br>
				<span class="italics">Posted at</span>&nbsp;&nbsp;<%= f.created_at.strftime('%b. %e, %Y') %><br>	
				<span class="italics">Offered by</span>&nbsp;&nbsp;<%= f.user.full_name %>
			</div>
			<div class="align-right">
				<% if can_apply?(f) %>
					<%= link_to "View & Connect", opportunity_path(f), :class => "btn btn-info" %>
				<% else %>
					<%= link_to "View", opportunity_path(f), :class => "btn btn-success" %>
				<% end %>
			</div>
			<div class="clear"></div>
		</div>
	<% end %>

	<br>

	<div class="pull-right">
		<%= paginate @opportunities, :theme => 'twitter-bootstrap', :window => 2 %>
	</div>
</div>

<div class="opportunities_index_right_container box_shadow box_padding align-left">
	<span class="italics">Have any opportunity that you want to offer to other alumni?</span><br><br>
	<div class="pull-right">
		<%= link_to new_opportunity_path, :class => "btn btn-success" do %>
			<i class="fa fa-pencil"></i>&nbsp;Create
		<% end %>
	</div>
</div>

<div class="clear"></div>







      <div id="sponsors">  
        <%= f.fields_for :sponsors do |sponsor| %>        
          <%= render 'sponsor_fields', :f => sponsor %>
        <% end %>
        <div class="btn btn-primary sponsor_btn">
            <%= link_to_add_association 'Add Sponsors', f, :sponsors, :render_options => {:locals => {:index => numOfSponsors}}, :class => "sponsor_link" %>

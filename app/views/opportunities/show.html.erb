<% content_for :head do %>
	<title>GAN Opportunities</title>
	<%= javascript_include_tag "opportunities/show" %>
<% end %>

<% if can_apply?(@opportunity) %>
	<div class="align-right">
		<%= link_to new_opportunity_application_path(@opportunity), :class =>"btn btn-info" do %>
			<i class="fa fa-mail-forward"></i>&nbsp;Connect
		<% end %>
	</div>
<% end %>

<% if current_user.is_owner?(@opportunity) %>
	<div class="align-right">
		<%= link_to edit_opportunity_path(@opportunity), :class =>"btn btn-success" do %>
			<i class="fa fa-edit"></i>&nbsp;Edit
		<% end %>
	</div>
<% end %>
<div class="clear"></div>

<br>

	<h1>
		<%= @opportunity.title %> 
		<small> <%= @opportunity.company %></small>
		
		<% if can_apply? (@opportunity) %>
			<span class="label label-warning">Not Connected</span>	
		<% elsif current_user.is_owner? (@opportunity) %>
			<span class="label label-info">Owner</span>	
		<% else %>
			<span class="label label-success">Connected</span>
		<% end %>

		<% if !@opportunity.is_active? %>
			<span class="label label-warning">Inactive</span>
		<% end %>

	</h1>


<h2><small><span class="italics"><%= @opportunity.job_type %></span></small></h2>

<br>

<div class="row">
	<div class="span6">
		<%= image_tag @opportunity.upload.url(:medium), :class=>"box_radius" %><br>

<br><br>


<p class="section-header"><i class="fa fa-book"></i>&nbsp;Skills & Expertise</p>
<% @skills.each do |skill| %>
	<div><span class="indent"/><i class="fa fa-check"></i>&nbsp;<%= skill.skill %></div>
<% end %>

<br>

<p class="section-header"><i class="fa fa-tasks"></i>&nbsp;Description</p>
<div><span class="indent"/><%= @opportunity.description %></div>


<% if @uploads.length != 0 %>
	<h5>For more details, please refer to the attached files</h5> 
	<% @uploads.each do |u| %>
		<div>
			<span class="indent"></span><i class="fa fa-check"></i>
			&nbsp;<span class="file_display"><%= u.avatar_file_name %></span>

			&nbsp;
			
			<%= link_to download_path(:id=>@opportunity.id, :upload_id => u.id, :type => "display"), :class =>"btn btn-success", :target =>"_blank" do %>
				<i class="fa fa-desktop"></i>&nbsp;View
			<% end %>
			<%= link_to download_path(:id=>@opportunity.id, :upload_id => u.id, :type => "download"), :class =>"btn btn-primary", :target =>"_blank" do %>
				<i class="fa fa-download"></i>&nbsp;Download
			<% end %>
		</div>
		<br>
	<% end %>
<% end %>

<br>

<p class="section-header"><i class="fa fa-location-arrow"></i>&nbsp;Location</p>
<div><span class="indent"/><%= @opportunity.location %></div><br>

<div class="gmap">
	<div id="map-canvas-show"></div>
</div>

<br>


<br><br>


<p class="section-header"><i class="fa fa-calendar"></i>&nbsp;Time</p>
<% if @time.first.is_flexible? %>
	<div><span class="indent"/><strong>Flexible</strong>&nbsp; Please make appointment on indivdual basis!</div><br>
<% else %>
	<div><span class="indent"/><strong>From</strong>&nbsp;<%= @time.first.date.to_time.strftime('%b. %e, %Y (%a)') %></div><br>
	<div><span class="indent"/><strong>To</strong>&nbsp;<%= @time.second.date.to_time.strftime('%b. %e, %Y (%a)') %></div><br>
<% end %>
	</div>

	<div class="span3">
		<% owner = @opportunity.user %>
		<div class="well">
		<p class="section-header"><%= owner.full_name %></p>
		<br>
		<div>
			<div><%= image_tag owner.avatar.url(:thumb), :class=>"box_radius" %></div>
			<div class="indent">
				<% if owner.is_alum? %>
					<h5>Class of <%= owner.classyear %></h5>
				<% end %>
			</div>
		</div>
		<%= link_to "View profile", user_path(:id => owner.id), :class => "pull-right" %>

		<br><br>

		<% if @sponsors.length != 0 %>
			<p class="section-header"><i class="fa fa-group"></i>&nbsp;Sponsors</p><br>
			<% @sponsors.each do |sponsor| %>
				<span class="indent"/><i class="fa fa-check"></i>&nbsp;<strong><%= sponsor.name %></strong><br>
				<span class="indent"/><%= sponsor.position %> @ <%= sponsor.company %><br>
			<% end %>
		<% end %>
		</div>
	</div>
</div>

<br>



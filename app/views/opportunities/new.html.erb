<% content_for :head do %>
	<%= javascript_include_tag "opportunities/form" %>
<% end %>

<% content_for :title, "New Opportunity" %>

<div class="container">
	<h2 class="header">New Opportunity</h2>
	<hr class="style-one"></hr>

	<%= form_for @opportunity, :html => { :multipart => true, :id => "new_opportunity_form" } do |f| %>
		
		<% if @opportunity.errors.any? %>
	        <div class="error_messages">
	          <h4>Some errors were found.</h4>
	          <ul>
	            <% @opportunity.errors.full_messages.each do |msg| %>
	              <li><%= msg %></li>
	            <% end %>
	          </ul>
	        </div>
	     <% end %>

	    <!-- Rendering actual template for new opportunity -->
		<%= render "form", :f => f %>
		<br>
		<%= f.hidden_field :active, :value => true %>
		<div class="align-right">
			<%= f.submit "Create", :class => "btn btn-primary" %>
		</div>
	<% end %>
</div>
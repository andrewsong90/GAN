<% content_for :head do %>
	<title>GAN Opportunities</title>
	<%= javascript_include_tag "opportunities/show" %>
<% end %>

<br>
<div class="container">
<div class="page-header">
	<h3>
		<%= @opportunity.title %> 
		<small> <%= @opportunity.company %></small>
	</h1>
</div>
<br>
<div class='pull-right'>
<%= link_to "View Opportunity", opportunity_path(@opportunity) %>
</div>
<div class='clear'></div>
<br>

<p class="section-header"><i class="fa fa-user"></i>&nbsp;Applicant</p>
<div>
	<span class="indent"/><%= @applicant.full_name %> ( id: <%= @applicant.id%> ) 
	<%= link_to "View Applicant", admins_user_path(:id => @applicant.id) %>
</div><br>

<br>

<p class="section-header"><i class="fa fa-user"></i>&nbsp;Opportunity provider</p>
<div>
	<span class="indent"/><%= @opportunity.user.full_name %> (id: <%= @opportunity.user.id %> )
	<%= link_to "View Provider", admins_user_path(:id => @opportunity.user.id) %>
</div>

<br>

<p class="section-header"><i class="fa fa-envelope"></i>&nbsp;Message</p>
<div>
	<span class="indent"/><%= @application.message %>
</div>
</div>
<br><br>

<%= form_for([@opportunity, @application], :html => { :multipart => true, :id => "fileupload" }) do |f| %>

  	<div><%= f.label "Send message to #{@opportunity.user.full_name}", :class => "section-header" %><br>
  	<%= f.text_area :message, :rows => "6", :class => "span6" %></div>

    <div><%= f.hidden_field :opportunity_id, :value => @opportunity.id %>

    <br>
    Do you have any resumes you want to attach?<br>
    <div><%=# f.file_field :upload %></div><br>
    <% @uploads.each do |upload| %>
  		<%= check_box_tag 'attachments[]',upload.id %>&nbsp;<%= upload.avatar_file_name %><br>
	  <% end %>

    <br>


        <%= f.submit "Connect", :class => "btn" %>
    </div>

  <% end %>
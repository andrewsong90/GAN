<% content_for :head do %>
  <title>GAN Opportunities</title>
  <%= javascript_include_tag "users/registration" %>
<% end %>

<% content_for :title, "Login" %>


<div class="container">
  
  <div class="page-header text-align-center">
    <h1 class="neatfont">
      Welcome to the Gann Alumni Network<br>
    </h1>
  </div>

  <div>

    <div class="span2 offset1">
      <img src = <%= image_path("gann.jpg") %> class="box_radius" alt="gann"/>
    </div>


    <div class="span3 offset1">
      <%= devise_error_messages! %>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div><span class="field-header">Email</span><br>
        <%= f.email_field :email, :autofocus => true %></div>

        <div><span class="field-header">Password</span><br>
        <%= f.password_field :password %></div>

        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me, :class=>"custom-form" %> <%= f.label :remember_me, :class=>"custom-form" %>
          </div>
        <% end -%>

        <br>
        		<%= f.submit "Sign in", :class =>"btn btn-primary" %> 

            <div class="medium">
              <br>
            </div>


        		<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        			<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      		<% end -%>

          <div class="highonly">

            <strong>Here for the first time?</strong>
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Register", new_alum_registration_path %>
            <% end -%>

            <br><br>
            <strong>Want to offer an opportunity?</strong> <%= link_to "Contact us", new_contact_path %> <br> 
            <strong>Having trouble?</strong> <%= link_to "Contact us", new_contact_path %><br>
          </div>
      <% end %>
    </div>


  </div>
  <div class="clear"></div>

  <div class="medium">
    <div class="offset1">
      <strong>Alumni, Here for the first time?</strong>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Register", new_alum_registration_path %>
        <% end -%>

        <br>

      <strong>Want to learn more about the network?</strong> <span class="italics">or</span> <strong>Having trouble?</strong> <%= link_to "Contact us", new_contact_path %>
    </div>
  </div>
</div>
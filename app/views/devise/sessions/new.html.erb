<div class="container">
  <div class="page-header text-align-center">
    <h1 class="neatfont">
      Welcome to the Gann Alumni Network<br>
    </h1>
  </div>

  <div class="row">
    <div class="span3 offset1">
      <img src = <%= image_path("gann.jpg") %> class="box_radius" alt="gann"/>
    </div>


    <div class="span3 offset1">
      <%= devise_error_messages! %>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div><span class="field-header">Email</span><br>
        <%= f.email_field :email, :autofocus => true %></div>

        <div><span class="field-header">Password</span><br>
        <%= f.password_field :password %></div>

        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me, :class=>"custom-form" %> <%= f.label :remember_me, :class=>"custom-form" %>
          </div>
        <% end -%>

        <br>
        	<div>
        		<%= f.submit "Sign in", :class =>"btn btn-primary" %> 
        		<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        			<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      		<% end -%>
      	</div>
      <% end %>

      <strong>Here for the first time?</strong>



      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Register", new_alum_registration_path %>
      <% end -%>

      <br><br>
      <strong>Want to offer an opportunity</strong> <%= link_to "Contact us", new_contact_path %> <br> 
      <strong>Having trouble?</strong> <%= link_to "Contact us", new_contact_path %><br>
      

    </div>
  </div>
</div>
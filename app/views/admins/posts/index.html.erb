<%= render "admins/shared/head" %>

<div class="container">
	<h2 class="header">List of Announcements</h2>

	<br>

	<table class="table table-striped">
		<tr>
			<th>Title</th>
			<th>Created at</th>
			<th></th>
		</tr>

		<% @posts.each do |f| %>
			<tr>
				<td><%= f.title %></td>
				<td><%= f.created_at.strftime('%b. %e, %Y (%a)') %></td>
				<td><%= link_to "View", admins_post_path(f), :class => "btn btn-success" %></td>
			</tr>
		<% end %>	
	</table>
</div>
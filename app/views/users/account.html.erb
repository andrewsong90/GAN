<h3 class="header"><%= current_user.full_name%></h3>

<br>
<%= image_tag current_user.avatar.url(:medium), :class=>"box_radius" %>
<%= current_user.avatar.url %>
<br><br>


<span class="section-header"><i class="icon-envelope"></i></span>&nbsp;&nbsp;
<%= current_user.email %><br><br>

<span class="section-header"><i class="icon-phone"></i></span>&nbsp;&nbsp;
<%= current_user.phone %><br><br>

<% if alum_signed_in? %>
	<span class="section-header"><i class="icon-briefcase"></i></span>&nbsp;&nbsp;
	class of <%= current_user.classyear %><br><br>
<% end %>

<% if @uploads != nil %>
	<% @uploads.each do |u| %>
		<div><i class="icon-hand-right"></i>&nbsp;<%= u.avatar_file_name%> &nbsp;
			<%= link_to "Download",  u.avatar.url %>
		</div>
	<% end %>
<% end %>
<br>


<br><br>
<%= link_to "Edit Account", edit_user_registration_path, :class => "btn btn-info" %>
<br><br>
Do you want to invite non-alum to this GAN platform?&nbsp; 

<% content_for :head do %>
  <title>GAN Opportunities</title>
  <%= javascript_include_tag "users/registration" %>
<% end %>

<div class="container">
  <div class="text-align-center">
    <h2>Register for Gann Alumni Networks</h2>
  </div>
  
  <br>
  
  <div>
    <h3>Step 1: Authentication</h3>
    
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <% if resource.errors.any? %>
        <div class="error_messages">
          <h4>Some errors were found.</h4>
          <ul>
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div><%= f.label :email, :class => "section-header" %><br>
      <%= f.email_field :email, :autofocus => true %>
      </div>


      <div><%= f.label "First Name", :class => "section-header" %><br>
      <%= f.text_field :fname %></div>

      <div><%= f.label "Last Name", :class => "section-header" %><br>
      <%= f.text_field :lname %></div>

      <div><%= f.label "Gann graduation class", :class => "section-header" %><br>
      <%= f.number_field :classyear %></div>

      <br>
      <p>
        We want to register you quickly!<br>
        Please input your parent's email address so we can check our records.<br>
      </p>

      <div><%= f.label "Parent Email", :class => "section-header" %>
      &nbsp;<a id="registration_parent_email_help" class="help"><i class="fa fa-question-circle"></i></a><br>  
      <%= f.email_field :parent_email %></div>  

      <%= f.hidden_field :type, :value => "Alum" %>
      
      <br>

      <div class="align-right">
        <%= f.submit "Sign up", :class => "btn btn-primary" %>
      </div>
      <div class="clear"></div>

    <% end %>
  </div>
</div>

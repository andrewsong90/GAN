<% content_for :head do %>
  <title>GAN Opportunities</title>
  <%= javascript_include_tag "users/registration" %>
<% end %>

<h2>Register as Friend for GAN</h2><br>

<%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%# devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>
  <%= f.hidden_field :type %>

  <div><%= f.label :Photo, :class => "section-header" %><br>
    <div class="fileinput fileinput-new" data-provides="fileinput">
      <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 250px; height: 250px;"></div>
      <div>
        <span class="btn btn-default btn-file">
          <span class="fileinput-new">Select image</span>
          <span class="fileinput-exists">Change</span>
          <%= f.file_field :avatar %>
        </span>
        <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
      </div>
    </div>
  </div>

  <br>

  <div><%= f.label "First Name", :class => "section-header" %><br>
  <%= f.text_field :fname %></div>

  <div><%= f.label "Last Name", :class => "section-header" %><br>
  <%= f.text_field :lname %></div>

  <div><%= f.label :Phone, :class => "section-header" %><br>
    <%= f.text_field :phone, :id => "phone", :placeholder => "XXX-XXX-XXXX" %></div> 

  <br>

  <div><%= f.label "Password", :class => "section-header" %><br>
  <%= f.password_field :password %></div>

  <div><%= f.label "Password Confirmation", :class => "section-header" %><br>
  <%= f.password_field :password_confirmation %></div>

  <br>

  <%= check_box_tag :license %>&nbsp;I agree to the terms of agreement&nbsp;
    <a class="btn btn-primary" id="licenseButton">View</a>

  <br><br>

  <%= f.submit t("devise.invitations.edit.submit_button"), :class=>"btn btn-primary" %>
<% end %>

<%= render :partial => "shared/registration" %>
